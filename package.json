        "faker": "^5.5.3",
        "graphql": "^15.6.0",
        "graphql-upload": "^12.0.0",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1",
        "typeorm": "^0.2.37"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-jwt": "^6.0.2",
        "@types/graphql": "^14.5.0",
        "@types/graphql-upload": "^8.0.7",
        "@types/jest": "^27.0.2",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^16.10.2",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.4",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1",
        "sqlite3": "^5.0.2",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "pretest": "rm -rf messenger",
        "test": "jest test/app.test.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "start": "ts-node src/index.ts",
        "start:dev": "nodemon src/index.ts",
        "build": "tsc",
        "start:prod": "node dist/index.js",
        "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
        "migration:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "migration:up:prod": "typeorm migration:run",
        "migration:down": "ts-node ./node_modules/typeorm/cli.js migration:revert",
        "migration:down:prod": "typeorm migration:revert",
        "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
        "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
        "seed": "ts-node src/seeds/index.ts",
        "seed:prod": "node dist/seeds/index.js",
        "docker:compose": "docker-compose up -d --build",
        "docker:logs": "docker logs messenger",
        "docker:logs:follow": "docker logs --tail 20 messenger --follow",
        "docker:yarn": "docker exec -t messenger yarn",
        "docker:migration:up": "docker exec -t messenger yarn migration:up:prod",
        "docker:migration:down": "docker exec -t messenger yarn migration:down:prod",
        "docker:seed": "docker exec -t messenger yarn seed:prod",
        "docker:restart": "docker-compose restart",
        "docker:exec": "docker exec -it messenger sh",
        "docker:up": "docker-compose up -d",
        "docker:stop": "docker-compose stop",
        "docker:down": "docker-compose down",
        "docker:db": "docker-compose --file db.compose.yml up -d"
    }
}